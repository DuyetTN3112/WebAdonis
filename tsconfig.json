{
  "extends": "@adonisjs/tsconfig/tsconfig.app.json",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./build",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "module": "es2022",
    "moduleResolution": "bundler",
    "lib": ["ES2020", "DOM"],
    "types": [
      "@adonisjs/core",
      "@adonisjs/lucid",
      "@adonisjs/auth",
      "@adonisjs/validator",
      "@adonisjs/session",
      "@adonisjs/ally",
      "@inertiajs/core",
      "node"
    ],
    "paths": {
      "@/*": ["resources/js/*"],
      "#/*": ["./*"]
    }
  },
  "include": [
    "resources/js/**/*",
    "app/**/*",
    "start/**/*",
    "config/**/*",
    "types/**/*",
    "bin/**/*"
  ],
  "exclude": ["node_modules", "build", "inertia/**/*"]
}