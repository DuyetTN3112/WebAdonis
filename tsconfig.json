{
  "extends": "@adonisjs/tsconfig/tsconfig.app.json",
  "compilerOptions": {
    "rootDir": "./",
    "jsx": "react-jsx",   
    "lib": ["dom", "esnext"],
    "module": "esnext",   
    "moduleResolution": "bundler", 
    "types": ["vite/client"],   
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
      "@/*": ["inertia/*"],
      "@lib/*": ["inertia/lib/*"]
    }
  },
  "exclude": ["node_modules", "build"]
}
